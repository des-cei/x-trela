    { name:     "OMN_3_SIZE",
      desc:     "STRELA Output Memory Node 3 size register",
      resval:   0,
      swaccess: "rw",
      hwaccess: "hrw",
      fields: [
        { bits: "15:0",   name: "OMN_3_SIZE",   desc: "STRELA Output Memory Node 3 size register" }
      ]
    }
  ]
}